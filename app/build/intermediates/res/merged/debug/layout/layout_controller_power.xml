<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/background">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="182dp"
                android:layout_height="130dp"
                card_view:cardBackgroundColor="#FFFFFF" >


                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="85dp"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ubication"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textColor="#47a842"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="d6101"
                    android:id="@+id/location"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="30dp" />

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:src="@drawable/mapa"
                android:layout_gravity="right|bottom" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="EXPLORE ROOM"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal|bottom"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                card_view:cardBackgroundColor="#FFFFFF">

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textColor="#47a842"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ON"
                android:id="@+id/status"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30dp" />

        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardBackgroundColor="#FFFFFF" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Change status"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textColor="#47a842"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18dp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:visibility="visible"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/DeviceIcon"
                android:background="@drawable/power_on"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="200dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="OFF"
                android:id="@+id/infodevice"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="230dp" />

        </android.support.v7.widget.CardView>

    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        app:backgroundTint="#3296f3"
        android:layout_marginRight="-5dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:layout_gravity="center"
        app:backgroundTint="#f44336"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-1dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/tableLayout"
        android:id="@+id/infoLayout"
        android:background="#BBDEFB"
        android:visibility="visible"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ya esta suscrito a este dispositivo"
            android:id="@+id/textView8"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_above="@+id/addButton"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView3"
            android:background="@drawable/success"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/alvar/Desktop/TFG2/TFG2/app/src/main/res/layout/layout_controller_power.xml -->